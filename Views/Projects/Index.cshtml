@model ProjectManagementSystem.Models.ViewModels.ProjectListVm

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjectManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjectManagementSystem.styles.css" asp-append-version="true" />
    <!-- 引入 Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Projects List</h2>
    <a asp-controller="Projects" asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus"></i> Create New Project
    </a>
</div>

<!-- Search & Filter Section -->
<form method="get" class="mb-4">
    <div class="row g-3">
        <div class="col-md-3">
            <input type="text" class="form-control" name="searchTerm" placeholder="Search project name..."
                   value="@Model.SearchTerm">
        </div>
        <div class="col-md-2">
            <input type="date" class="form-control" name="startDateFilter"
                   value="@(Model.StartDateFilter?.ToString("yyyy-MM-dd"))">
        </div>
        <div class="col-md-2">
            <input type="date" class="form-control" name="endDateFilter"
                   value="@(Model.EndDateFilter?.ToString("yyyy-MM-dd"))">
        </div>
        <div class="col-md-2">
            <select class="form-select" name="statusFilter" asp-items="@Model.StatusOptions">
            </select>
        </div>
        <div class="col-md-2">
            <select class="form-select" name="managerFilter" asp-items="@Model.ProjectManagers">
            </select>
        </div>
        <div class="col-md-1">
            <button type="submit" class="btn btn-primary w-100">
                <i class="bi bi-search"></i>
            </button>
        </div>
    </div>
</form>

